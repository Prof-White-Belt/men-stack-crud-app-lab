<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Submissions</title>
  </head>

  <body>
    <h1>All Submissions</h1>
    <a href="/submissions/new">Add a New Submission</a>
    <ul>
      <% submissions.forEach(submission => { %>
        <li>
          <%= submission.name %> - <%= submission.difficulty %> 
          <a href="/submissions/<%= submission._id %>">View</a>
          <a href="/submissions/<%= submission._id %>/edit">Edit</a>
          <form action="/submissions/<%= submission._id %>?_method=DELETE" method="POST" style="display:inline;">
            <button type="submit">Delete</button>
          </form>
        </li>
      <% }); %>
    </ul>
  </body>
</html>
